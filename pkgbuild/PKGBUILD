# Maintainer: Alex Creio <ctlos@protonmail.com>

srcname=ctlos_art
pkgname=ctlos-wall
pkgdesc='Wallpaper'
pkgver=1.1.8
pkgrel=3
arch=('any')
url="https://github.com/ctlos/ctlos_art"
license=('GPL')
groups=('ctlos')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/${srcname}
  install -d $pkgdir/usr/share/wall
  cp -rf wall/. $pkgdir/usr/share/wall
}
